generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?
  phone         String?   @unique
  phoneVerified DateTime?
  password      String?   // For email/password auth
  
  // Custom fields for Vibe Academy
  isFoundingMember Boolean   @default(false)
  purchasedAt      DateTime?
  stripeCustomerId String?   @unique
  metadata         Json?     // For tags and other flexible data
  
  accounts      Account[]
  sessions      Session[]
  purchases     Purchase[]
  licenseKeys   LicenseKey[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Purchase tracking for both Stripe and Gumroad
model Purchase {
  id          String   @id @default(cuid())
  userId      String
  productId   String   // Our internal product ID
  productName String
  amount      Int      // Amount in cents
  currency    String   @default("USD")
  status      String   // completed, refunded, disputed
  provider    String   // stripe, gumroad
  providerId  String   // Stripe session ID or Gumroad sale ID
  metadata    Json?    // Store provider-specific data
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  licenseKeys LicenseKey[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([provider, providerId])
  @@index([userId])
  @@index([productId])
}

// License key management
model LicenseKey {
  id              String    @id @default(cuid())
  key             String    @unique
  userId          String
  purchaseId      String
  productId       String
  activations     Int       @default(0)
  maxActivations  Int       @default(1)
  lastActivatedAt DateTime?
  expiresAt       DateTime?
  disabled        Boolean   @default(false)
  metadata        Json?     // Store activation details
  
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  purchase Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([productId])
}